@inject SessionState _state
@inject IJSRuntime _jsRuntime

<div class="m-3" style="position: absolute; top: 0; left: 0;">
    <button type="button" class="m-2 btn btn-square btn-outline-success border-0 dropdown-toggle caret-off" data-bs-toggle="dropdown" data-bs-auto-close="outside" aria-expanded="false">
        <ion-icon name="add-sharp"></ion-icon>
    </button>
    <div class="dropdown-menu mt-3 shadow border-0">
        <h6 class="dropdown-header"><ion-icon name="person-add-sharp" style="margin-bottom: -2px;"></ion-icon> Invite a participant</h6>
        <div class="d-flex form-control p-0 mx-3 mb-2" style="width: 675px; overflow: hidden;">
            <input type="email" class="form-control border-0 border-end rounded-end-0" disabled value="@(_state.SessionUrl)">
            <button class="btn border-0 btn-outline-secondary btn-loadable rounded-0" type="button" @onclick="@(async () => await _jsRuntime.InvokeVoidAsync("navigator.clipboard.writeText", _state.SessionUrl))"><ion-icon name="clipboard-sharp"></ion-icon></button>
        </div>
        <div class="dropdown-divider"></div>
        <a class="dropdown-item" href="https://freeplanningpoker.io" target="_blank" rel="noopener noreferrer"><ion-icon name="open-outline" style="margin-bottom: -2px;"></ion-icon> Start a new planning session</a>
    </div>
</div>
